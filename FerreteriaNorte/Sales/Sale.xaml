                <Label x:Name="labelDate" Content="01/01/18" HorizontalAlignment="Left" Margin="326.999,40,0,0" VerticalAlignment="Top"/>
                <Label x:Name="labelAddress" Content="Av. 9 de Julio 1562" HorizontalAlignment="Left" Margin="326.999,70,0,0" VerticalAlignment="Top"/>
                <Label x:Name="labelProvince" Content="Chaco" HorizontalAlignment="Left" Margin="326.999,100,0,0" VerticalAlignment="Top"/>
                <Label x:Name="labelTerminal" Content="1 - Av. San Martín" HorizontalAlignment="Left" Margin="93.999,40,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.37,-0.133"/>
                <ComboBox x:Name="comboName" HorizontalAlignment="Left" Margin="93.999,70,0,0" VerticalAlignment="Top" Width="120"/>
                <Label x:Name="labelCUIT" Content="27-32558412-0" HorizontalAlignment="Left" Margin="93.999,100,0,0" VerticalAlignment="Top"/>
            </Grid>
        </GroupBox>
        <GroupBox x:Name="groupBox1" Header="DESCUENTOS" HorizontalAlignment="Stretch" Height="96.667" Margin="0,151.001,0,0" VerticalAlignment="Top" FontSize="11">
            <Grid HorizontalAlignment="Stretch" Margin="0,0,0,0" VerticalAlignment="Stretch">
                <Label x:Name="label4" Content="Ventas:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" FontWeight="Bold"/>
                <Label x:Name="label4_Copy" Content="Extra:" HorizontalAlignment="Left" Margin="18,40,0,0" VerticalAlignment="Top" FontWeight="Bold" RenderTransformOrigin="0.855,0.467"/>
