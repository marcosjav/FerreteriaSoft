        <GroupBox x:Name="groupBox2_Copy3" Header="TOTAL" HorizontalAlignment="Left" Height="53.332" Margin="398,0,0,25" Width="113" FontSize="10" VerticalAlignment="Bottom" Grid.Row="1">
            <Label x:Name="label8" Content="$999.999,99" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="16" FontWeight="Bold"/>
        </GroupBox>
        <Button x:Name="button1" Content="ANULAR (F5)" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Bottom" Width="103" Grid.Row="1"/>
        <Button x:Name="button1_Copy" Content="CONFIRMAR (F6)" HorizontalAlignment="Left" Margin="398,0,0,0" VerticalAlignment="Bottom" Width="104" Grid.Row="1"/>

    </Grid>
</Page>
