            </Grid>
        </GroupBox>
        <ListView x:Name="listView" HorizontalAlignment="Stretch" Margin="0,2.668,0,79.166" VerticalAlignment="Stretch" Width="512" Grid.Row="1">
            <ListView.View>
                <GridView>
                    <GridViewColumn/>
                </GridView>
            </ListView.View>
